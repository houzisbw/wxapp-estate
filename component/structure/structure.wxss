/* component/structure/structure.wxss */
.structure-wrapper{

}
.floor-wrapper{
    height:50rpx;
    padding:10rpx 0;
    /*border-bottom: 1px solid #d8d8d8;*/
    display: flex;
    align-items: center;
}
.floor-text{
    width:100rpx;
    line-height: 50rpx;
    font-size: 25rpx;
    height:100%;
    color: #595959;
}
.input-wrapper{
    flex-grow:1;
    height:100%;
}
.input-inner-wrapper{
    float:right;
    height:100%;
    display: flex;
}
.input-width-control-wrapper{
    width:100rpx;
    display: flex;
    align-items: center;
}
.input-title{
    height:100%;
    line-height: 50rpx;
    font-size: 25rpx;
    color: #595959;
    margin: 0 15rpx;
}
.last-title{
    margin-right: 5rpx;
}
/*输入框样式,需要修改min-height来修改输入框高度*/
.inner-input{
    border:1px solid #bcbcbc;
    font-size: 25rpx;
    text-align: center;
    height:40rpx!important;
    min-height: 40rpx!important;
    border-radius: 8rpx;
}
.btn-wrapper{
    height:40rpx;
    display: flex;
    justify-content: space-between;
}
.btn{
    width:40rpx;
    height:100%;
}
.btn-img{
    width:100%;
    height:100%;
}